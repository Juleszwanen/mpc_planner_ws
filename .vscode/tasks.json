{
    "version": "2.0.0",
    "tasks": [
        // Build tasks
        {
            "label": "build",
            "detail": "Build workspace (default)",
            "type": "shell",
            "command": "./build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Simulator",
            "command": "source /workspace/devel/setup.bash && roslaunch mpc_planner_jackalsimulator ros1_jackalsimulator.launch",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                // "close": true
            }
        },
        {
            "label": "Run Jackal (REAL)",
            "command": "source devel/setup.zsh && roslaunch mpc_planner_jackal ros1_jackal.launch",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                // "close": true
            }
        },
    ]
}